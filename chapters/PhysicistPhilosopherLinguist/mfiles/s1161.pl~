$d=0.01;
$x=$d;
$y=$d;
$z=$d;
open(datax,">./s1160.data");

while ($x<=.3)
{
while ($y<=.3)
{
while ($z<=.06)
{
if ((.24+$z<=$x+$y)&&($x+$y<=.3))
{
    $h=(($x)*log(($x)))+(($y)*log(($y)))+(($z)*log(($z)))+((.4-$x)*log((.4-$x)))+((.3-$y)*log((.3-$y)))+((.14+$z)*log((.14+$z)))+((.06-$z)*log((.06-$z)))+((.3-$x-$y)*log((.3-$x-$y)))+((.04)*log((.04)))+((-.24+$x+$y-$z)*log((-.24+$x+$y-$z)));
    print datax "x: $x\t $y: $y\t z: $z\t $h\n";
}
}
$z=$d;
}
$y=$d;
}
